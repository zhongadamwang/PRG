  "projectNameReplacements": [
    {
      "find": "Prg.ProjectName.Blazor",
      "replace": "{Prefix}.{ProjectName}.Blazor", 
      "description": "Replace Blazor project reference in configurations"
    },
    {
      "find": "Prg.ProjectName.Core",
      "replace": "{Prefix}.{ProjectName}.Core", 
      "description": "Replace Core project reference in configurations"
    },
    {
      "find": "Prg.ProjectName.BusinessProcess",
      "replace": "{Prefix}.{ProjectName}.BusinessProcess", 
      "description": "Replace BusinessProcess project reference in configurations"
    },
    {
      "find": "Prg.ProjectName.Repositories",
      "replace": "{Prefix}.{ProjectName}.Repositories", 
      "description": "Replace Repositories project reference in configurations"
    },
    {
      "find": "Prg.ProjectName",
      "replace": "{Prefix}.{ProjectName}",
      "description": "Replace project name in scripts and configuration"
    }
  ],
  "namespaceReplacements": [
    {
      "find": "Sanjel.eServiceCloud",
      "replace": "{Prefix}.{ProjectName}"
    },
    {
      "find": "namespace Sanjel.eServiceCloud",
      "replace": "namespace {Prefix}.{ProjectName}"
    },
    {
      "find": "using Sanjel.eServiceCloud",
      "replace": "using {Prefix}.{ProjectName}"
    }
  ],
  "additionalReplacements": [
    {
      "find": "eServiceCloud",
      "replace": "{ProjectName}",
      "description": "Replace project name references in comments and strings"
    },
    {
      "find": "net8.0",
      "replace": "net10.0",
      "description": "Update target framework to .NET 10.0"
    }
  ]
